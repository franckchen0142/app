{% extends 'base.html.twig' %}

{% block title %}Driver
{% endblock %}

{% block body %}
	<h1>Driver</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Photo</th>
				<td><img src="{{ asset('uploads/' ~ driver.photo) }}" alt="photo" width="150"><a href="{{ path('app_driver_photo_edit',{id:driver.id}) }}">changer la photo</a>
				</td>

			</tr>
			<tr>
				<th>Id</th>
				<td>{{ driver.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ driver.name }}</td>
			</tr>
			<tr>
				<th>FirstName</th>
				<td>{{ driver.firstName }}</td>
			</tr>
			<tr>
				<th>Phone</th>
				<td>{{ driver.phone }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ driver.email }}</td>
			</tr>
			<tr>
				<th>Adress</th>
				<td>{{ driver.adress }}</td>
			</tr>
			<tr>
				<th>City</th>
				<td>{{ driver.city }}</td>
			</tr>
			<tr>
				<th>Cp</th>
				<td>{{ driver.cp }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ driver.createdAt ? driver.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_driver_index') }}">back to list</a>

	<a href="{{ path('app_driver_edit', {'id': driver.id}) }}">edit</a>

	{{ include('driver/_delete_form.html.twig') }}
{% endblock %}
