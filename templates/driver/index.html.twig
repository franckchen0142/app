{% extends 'base.html.twig' %}

{% block title %}Driver index
{% endblock %}

{% block body %}
	<h1>Driver index</h1>

	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>Name</th>
				<th>FirstName</th>
				<th>Phone</th>
				<th>Email</th>
				<th>Adress</th>
				<th>City</th>
				<th>Cp</th>

				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for driver in drivers %}
				<tr>
					<td><img src="{{ asset('uploads/' ~ driver.photo) }}" alt="photo driver" width="150"></td>
					<td>{{ driver.name }}</td>
					<td>{{ driver.firstName }}</td>
					<td>{{ driver.phone }}</td>
					<td>{{ driver.email }}</td>
					<td>{{ driver.adress }}</td>
					<td>{{ driver.city }}</td>
					<td>{{ driver.cp }}</td>

					<td>
						<a href="{{ path('app_driver_show', {'id': driver.id}) }}">show</a>
						<a href="{{ path('app_driver_edit', {'id': driver.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_driver_new') }}">Create new</a>
{% endblock %}
